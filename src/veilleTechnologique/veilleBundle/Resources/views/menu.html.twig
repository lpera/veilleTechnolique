{% if app.session.get('id') != null %}
<div class="navbar-header">
    <a class="navbar-brand" href="{{ path('_user_index', {}) }}">Veille Technologique</a>
</div>
<div id="navbar" class="navbar-collapse collapse">
    <form class="navbar-form navbar-right" method="post" action="login">
        <a href="{{ path('_user_logout', {}) }}" class="btn btn-danger">D&eacute;connexion</a>
    </form>
</div>
{% else %}
<div class="navbar-header">
    <a class="navbar-brand" href="{{ path('_default_index', {}) }}">Veille Technologique</a>
</div>
<div id="navbar" class="navbar-collapse collapse">
    <form class="navbar-form navbar-right" method="post" action="login">
        <div class="form-group">
            <input name="user" type="text" placeholder="Nom d'utilisateur" class="form-control">
        </div>
        <div class="form-group">
            <input name="pass" type="password" placeholder="Mot de passe" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Connexion</button>
        <a href="{{ path('_default_inscription', {}) }}"  class="btn btn-primary">Inscription</a>
    </form>
</div>
{% endif %}